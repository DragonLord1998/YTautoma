# YouTube Long-Form & Shorts Automation Configuration
# Copy this to .env and configure paths

# ============================================
# Ollama (Local LLM for Story Generation)
# ============================================
# DeepSeek V3 Q4: ~50GB, 671B params (37B active via MoE)
# Alternatives: qwen2.5:72b (~42GB), llama3.1:70b (~40GB)
OLLAMA_MODEL=deepseek-v3:q4_k_m
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Research Agent (36B+ model recommended)
# ============================================
RESEARCH_MODEL=qwen3:32b
SEARXNG_URL=http://localhost:8080

# ============================================
# Long-Form Video Settings
# ============================================
TOTAL_PARTS=20
PART_DURATION=60
SCENES_PER_PART=5

# ============================================
# Z-Image (Local Diffusers)
# ============================================
ZIMAGE_MODEL=Tongyi-MAI/Z-Image-Turbo
ZIMAGE_DEVICE=cuda

# ============================================
# Wan 2.2 Video Generation (14B for 720p)
# ============================================
# Path to cloned Wan2.2 repository
WAN_REPO_PATH=/path/to/Wan2.2

# Path to downloaded model weights (use 14B for best quality)
WAN_MODEL_PATH=/path/to/Wan2.2-I2V-14B

# Video settings (720p horizontal for long-form)
WAN_VIDEO_SIZE=1280*720
WAN_VIDEO_FRAMES=241
WAN_TASK=i2v-14B

# Memory optimization flags
WAN_T5_CPU=true
WAN_OFFLOAD_MODEL=true

# ============================================
# Qwen-Image-Edit (Local - Optional)
# ============================================
QWEN_IMAGE_EDIT_MODEL=Qwen/Qwen-Image-Edit

# ============================================
# TTS Configuration
# ============================================
TTS_ENGINE=chatterbox  # Options: chatterbox, vibevoice, edge

# ChatterBox TTS (Primary - Best Quality)
CHATTERBOX_DEVICE=cuda
CHATTERBOX_VOICE_REF=  # Optional: path to 10-second voice reference

# VibeVoice TTS (Fallback)
VIBEVOICE_REPO_PATH=/path/to/VibeVoice
VIBEVOICE_MODEL=microsoft/VibeVoice-Realtime-0.5B
VIBEVOICE_SPEAKER=Carter

# ============================================
# Hardware Settings
# ============================================
# Enable memory-saving mode (recommended for <48GB VRAM)
LOW_VRAM_MODE=true

# Torch dtype: bfloat16 (recommended), float16, or float32
TORCH_DTYPE=bfloat16

