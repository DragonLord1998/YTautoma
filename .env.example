# YouTube Shorts Automation Configuration (Local Offline Models)
# Copy this to .env and configure paths

# ============================================
# Ollama (Local LLM for Story Generation)
# ============================================
OLLAMA_MODEL=gemma3:27b-abliterated
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Z-Image (Local Diffusers)
# ============================================
ZIMAGE_MODEL=Tongyi-MAI/Z-Image-Turbo
ZIMAGE_DEVICE=cuda

# ============================================
# Wan 2.2 Video Generation (Local)
# ============================================
# Path to cloned Wan2.2 repository
WAN_REPO_PATH=/path/to/Wan2.2

# Path to downloaded model weights
WAN_MODEL_PATH=/path/to/Wan2.2-I2V-A14B

# Memory optimization flags
WAN_T5_CPU=true
WAN_OFFLOAD_MODEL=true

# ============================================
# Qwen-Image-Edit (Local - Optional)
# ============================================
QWEN_IMAGE_EDIT_MODEL=Qwen/Qwen-Image-Edit

# ============================================
# VibeVoice TTS (Local)
# ============================================
# Path to cloned VibeVoice repository
VIBEVOICE_REPO_PATH=/path/to/VibeVoice

# Model and speaker settings
VIBEVOICE_MODEL=microsoft/VibeVoice-Realtime-0.5B
VIBEVOICE_SPEAKER=Carter

# ============================================
# Hardware Settings
# ============================================
# Enable memory-saving mode (recommended for <24GB VRAM)
LOW_VRAM_MODE=true

# Torch dtype: bfloat16 (recommended), float16, or float32
TORCH_DTYPE=bfloat16
